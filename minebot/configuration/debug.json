{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "colored": {
            "()": "debug.debugger.ColoredFormatter",
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
            "datefmt": "%Y-%m-%d %H:%M:%S"
        },
        "standard": {
            "format": "[%(levelname)4s] [%(name)-8s] [%(asctime)s] â†’ %(message)s",
            "datefmt": "%Y-%m-%d %H:%M:%S"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "colored",
            "stream": "ext://sys.stdout"
        },
        "file": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "INFO",
            "formatter": "standard",
            "filename": "logs/minebot.log",
            "maxBytes": 10485760,
            "backupCount": 5,
            "encoding": "utf-8"
        }
    },
    "loggers": {
        "minebot": {
            "level": "DEBUG",
            "handlers": [
                "console",
                "file"
            ],
            "propagate": false
        },
        "hikari": {
            "level": "WARNING",
            "handlers": [
                "console",
                "file"
            ],
            "propagate": false
        }
    },
    "root": {
        "level": "WARNING",
        "handlers": [
            "console",
            "file"
        ]
    }
}